{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["src/typings/env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@components*": ["./src/components/*"],
      "@typings*": ["./src/typings/*"],
      "@utilities*": ["./src/utilities/*"]
    }
  }
}
